<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.aivancioglo</groupId>
    <artifactId>resttest</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>

    <name>RestTest</name>

    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>com.github.resttest.http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <scm>
        <url>http://github.com/aivancioglo/RestTest/tree/master</url>
        <connection>scm:git:git://github.com/aivancioglo/RestTest.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/aivancioglo/RestTest.git</developerConnection>
    </scm>

    <properties>
        <junit.jupiter.version>5.0.0</junit.jupiter.version>
        <selenium.version>3.4.0</selenium.version>
        <rest.assured>3.0.5</rest.assured>
        <json.path.version>3.0.5</json.path.version>
        <json.schema.validator.version>3.0.5</json.schema.validator.version>
        <scribejava.apis.version>2.5.3</scribejava.apis.version>
        <groovy.all.version>2.4.5</groovy.all.version>
        <hamcrest.version>2.0.0.0</hamcrest.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>${junit.jupiter.version}</version>
        </dependency>

        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>
            <version>${selenium.version}</version>
        </dependency>

        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
            <version>${rest.assured}</version>
        </dependency>

        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>json-path</artifactId>
            <version>${json.path.version}</version>
        </dependency>

        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>json-schema-validator</artifactId>
            <version>${json.schema.validator.version}</version>
        </dependency>

        <dependency>
            <groupId>com.github.scribejava</groupId>
            <artifactId>scribejava-apis</artifactId>
            <version>${scribejava.apis.version}</version>
        </dependency>

        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>${groovy.all.version}</version>
        </dependency>

        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>java-hamcrest</artifactId>
            <version>${hamcrest.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
</project>